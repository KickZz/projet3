<!DOCTYPE html>
<html>

<head>
    <title>{% block title %} Le Musée du Louvre {% endblock %}</title>
    <meta name="description" content="Billetterie du Musée du Louvre">
    <meta name="keywords" content="Exposition, Musée du Louvre, Collection">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="{{asset ('bundles/p3core/images/favicon.ico')}}" />
    <!--[if IE]><link rel="shortcut icon" type="image/x-icon" href="/{{asset ('bundles/p3core/images/favicon.ico')}}" /><![endif]-->
{% block head %} {% endblock %} {% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> {% endblock %} {% stylesheets filter='cssrewrite, ?scssphp' 'bundles/p3site/css/site.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" /> {% endstylesheets %}

</head>

<body data-spy="scroll" data-target=".navbar">
    
        <div class="container-fluid">

            <div class="row">
                <div class="col-xs-offset-2 col-xs-8 col-sm-offset-1 col-sm-4 col-md-offset-1 col-md-4 ">
                    <img src="{{asset ('bundles/p3core/images/logo.png')}}" alt="Louvre">
                </div>
                <div class="col-xs-12 col-sm-7 col-md-7 ">
                    <div class="row">
                        <div class="col-xs-offset-0 col-xs-9 col-sm-offset-0 col-sm-10 col-md-offset-0 col-md-10">
                            <h1 class="pull-right">Musée du Louvre</h1>
                        </div>

                        <div class="col-xs-offset-1 col-xs-2 col-sm-offset-2 col-sm-8 col-md-offset-4 col-md-6">


                            <nav class="navbar navbar-default col-md-offset-4 col-md-8 pull-right">

                                <div class="">

                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-controls="navbar">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>

                                </div>
                                <div class="collapse navbar-collapse">
                                    <ul class="nav navbar-nav">
                                        <li class="active">
                                            <a id="accueil" href="{{ path( 'p3_core_homepage')}}">Accueil</a>
                                        </li>
                                        <li>
                                            <a href="{{ path( 'p3_core_homepage')}}#billetterie">Billetterie</a>
                                        </li>
                                    </ul>
                                </div>

                            </nav>

                        </div>

                    </div>
                </div>
            </div>

            <div class="row">

                {% block connection %} {% endblock %}

            </div>
        </div>
    
    <div class="container-fluid">
        {{ render(controller("P3SiteBundle:Site:carrousel"))}} {% block body %} {% endblock %}
    </div>
    <div class="container-fluid">
        <footer>

            <div class="row">
                <div class="col-xs-offset-0 col-xs-3 col-sm-offset-0 col-sm-4 col-md-offset-0 col-md-4"><span class="glyphicon glyphicon-earphone col-xs-offset-7 col-sm-offset-0 col-md-offset-0"></span><em> 01.02.03.04.05</em></br>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %} Connecté en tant que {{ app.user.username }} -
                    <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a> {% endif %}
                </div>
                <div class="col-xs-offset-3 col-xs-6 col-sm-offset-1 col-sm-3 col-md-offset-0 col-md-4 text-center">Copyright 2017 -
                    <a href="{{ path('p3_site_condition')}}">Conditions Générales de vente</a>
                </div>
                <div class="hidden-xs col-sm-4 col-md-4"><a href="#accueil" class="pull-right"><span class="glyphicon glyphicon-chevron-up"></span></a>
                </div>
            </div>

        </footer>
    </div>
    {% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous">
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
    <script type="text/javascript">
        Stripe.setPublishableKey('pk_test_Ty4EdYYLfFFfkatOzAtrC24i');
    </script>
    {% endblock %} {% javascripts filter = 'jsqueeze' 'bundles/p3site/js/site.js' %}
    <script type="text/javascript" src="{{ asset_url }}">
    </script> {% endjavascripts %}

</body>

</html>