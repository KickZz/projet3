<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %} Le Musée du Louvre {% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    {% endblock %} {% stylesheets filter='cssrewrite, ?scssphp' 'bundles/p3site/css/site.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" /> {% endstylesheets %}

</head>

<body data-spy="scroll" data-target=".navbar">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-4"><img src="louvre.jpg" alt="Louvre"></div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4 pull-right">
                    <div class="col-xs-8 col-sm-12 col-md-12">
                        <h1>Musée du Louvre</h1></div>
                        {% block connection %} {% endblock %}
                    <div class="col-xs-5  col-sm-8 col-sm-offset-3 col-md-offset-3 col-md-8">

                        <nav class="navbar navbar-default ">
                            <div class="container">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-controls="navbar">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>

                                </div>
                                <div class="collapse navbar-collapse ">
                                    <ul class="nav navbar-nav">
                                        <li>
                                            <a href="{{ path( 'p3_core_homepage')}}">Accueil</a>
                                        </li>
                                        <li>
                                            <a href="#billetterie">Billetterie</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>

                    </div>
                </div>
            </div>
        </div>
        {{ render(controller("P3SiteBundle:Site:carrousel"))}}
    </div>


    {% block body %} {% endblock %}
    <footer>
        <div><em>01.02.03.04.05</em></div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            Connecté en tant que {{ app.user.username }}
                            -
                            <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                        {% endif %}
        <div>Copyright 2017 -
            <a href="{{ path('p3_site_condition')}}">Conditions Générales de vente</a></div>
    </footer>
    {% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous">
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
    <script type="text/javascript">
        Stripe.setPublishableKey('pk_test_Ty4EdYYLfFFfkatOzAtrC24i');
    </script>
    {% endblock %} {% javascripts filter = 'jsqueeze' 'bundles/p3site/js/site.js' %}
    <script type="text/javascript" src="{{ asset_url }}">
    </script> {% endjavascripts %}

</body>

</html>