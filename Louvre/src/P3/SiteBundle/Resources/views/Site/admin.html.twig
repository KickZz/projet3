{% extends "P3CoreBundle::layout.html.twig" %}
{% block head %}
<meta name="robots" content="noindex" >
{% endblock %} 
{% block body %}
<div class="container">
    <div class="row">
        <div>
            <h2>Ajouter une Exposition</h2>
            <ul class="nav nav-pills nav-justified">
                <li class="active"><a>Ajouter une exposition</a></li>
                <li><a href="{{ path('p3_site_adminsupprimer')}}">Supprimer une exposition</a></li>
            </ul>
            <div class="tab-content">
                
                {# On affiche tous les messages flash dont le nom est « notice » #} 
                {% for message in app.session.flashbag.get('notice')%}
                <div class="alert alert-info">Info : {{ message }}</div>
                {% endfor %} {{ include("P3SiteBundle:Site:formajout.html.twig") }} 

            </div>
        </div>
    </div>
</div>
{% endblock %}